<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.LoginController">
   <children>
      <Label layoutX="213.0" layoutY="31.0" prefHeight="31.0" prefWidth="228.0" text="Makrosa LogIn" textAlignment="CENTER" textFill="#24058d">
         <font>
            <Font name="MS Gothic" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="135.0" layoutY="137.0" prefHeight="25.0" prefWidth="318.0" promptText="Username" />
      <Button layoutX="374.0" layoutY="229.0" mnemonicParsing="false" onAction="#LogInClicked" prefHeight="25.0" prefWidth="79.0" text="Log In" textFill="#1eb523" />
      <Button fx:id="signUp" layoutX="374.0" layoutY="330.0" mnemonicParsing="false" onAction="#SignUpClicked" prefHeight="25.0" prefWidth="79.0" text="Sign Up" textFill="#2439d7" />
      <Label layoutX="146.0" layoutY="333.0" prefHeight="19.0" prefWidth="173.0" text="Don't have an account?" textFill="#227980">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label fx:id="wrongLogIn" layoutX="166.0" layoutY="104.0" prefHeight="20.0" prefWidth="258.0" text="Wrong Username/Password ! Try again." textAlignment="CENTER" textFill="#e84221">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="retrieve" layoutX="374.0" layoutY="292.0" mnemonicParsing="false" onAction="#RetrieveClicked" prefHeight="25.0" prefWidth="79.0" text="Retrieve" textFill="#b97a47" />
      <Label layoutX="147.0" layoutY="295.0" prefHeight="17.0" prefWidth="132.0" text="Forgot password ?" textFill="#b21010">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <PasswordField fx:id="password" layoutX="135.0" layoutY="188.0" prefHeight="25.0" prefWidth="318.0" promptText="password" />
   </children>
</AnchorPane>
